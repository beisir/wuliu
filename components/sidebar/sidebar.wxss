/* components/sidebar/sidebar.wxss */

.sidebar-wrap-bottom {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  left: 0;
  right: 0;
  transition: all 0.5s ease-in-out;
}
.sidebar-content-bottom{
  width: 100%;
  height: 80%;
  background: white;
}

.sidebar-wrap-top {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  display: flex;
  align-items: flex-start;
  left: 0;
  right: 0;
  transition: all 0.5s ease-in-out;
}
.sidebar-content-top{
  width: 100%;
  height: 80%;
  background: white;
}

.sidebar-wrap-left {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  display: flex;
  justify-content: flex-start;
  top: 0;
  bottom: 0;
  transition: all 0.5s ease-in-out;
}
.sidebar-content-left{
  width: 80%;
  height: 100%;
  background: white;
}

.sidebar-wrap-right {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  display: flex;
  justify-content: flex-end;
  top: 0;
  bottom: 0;
  transition: all 0.5s ease-in-out;
}
.sidebar-content-right{
  width: 80%;
  height: 100%;
  background: white;
}