/* pages/score_2/index.wxss */
page{height:100%;background:#f6f6f6;}
.container{background:#f6f6f6;overflow:hidden;}

.evaluateBox{clear:both;background:#fff;padding:30rpx 50rpx 40rpx;}
.evaluateList{clear:both;height:70rpx;line-height:70rpx;overflow:hidden;}
.e_txt_l{float:left;width:25%;font-size:30rpx;color:#333;}
.starCon{float:left;width:55%;}
.s_1,.s_2{width:38rpx;height:38rpx;display:block;float:left;background:url(https://style.org.hc360.com/images/cpk/p_c_ico2.png) no-repeat -154rpx 0;background-size:194rpx 36rpx; vertical-align: middle;margin:18rpx 15rpx 0;}
.s_1{background-position: 0 0;}
.s_2{background-position: -72rpx 0;}
.e_txt_r{float:left;width:20%;font-size:26rpx;color:#999;}

/* 底部 */
.w_bot{width:100%;height:96rpx;line-height:96rpx;font-size:30rpx;color:#333;background:#fff;position:fixed;left:0;bottom:0;box-shadow: 0 -4rpx 6rpx #ddd;text-align:center;display:block;}

/* 弹窗 */
.popBox{}
.mask{width:100%;height:100%;position:fixed;top:0;left:0;background:rgba(0,0,0,0.4);z-index:1000;}
.popCon{width:540rpx;height:210rpx;background:#fff;border-radius:20rpx;position: absolute;left:50%;top:50%;margin-left:-270rpx;margin-top:-105rpx;z-index:1001;}
.popTil{height:120rpx;line-height:120rpx;text-align:center;font-size:34rpx;color:#333;border-bottom:1rpx solid #ddd;display:block;box-sizing:border-box;}
.bnCon{clear:both;}
.btn1,.btn2{float:left;width:50%;line-height:90rpx;text-align:center;font-size:34rpx;color:#007cff;display:block;}
.btn1{box-sizing: border-box;border-right:1rpx solid #ddd;}
.btn1 a,.btn2 a{display: block;}